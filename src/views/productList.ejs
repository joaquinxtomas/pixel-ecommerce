        <main>

            <section class="Category">

                <h2>Productos </h2>

                    <div class="add-button">
                        <a href="/product/create"><p>Agregar producto</p></a>
                    </div>

                <div class="products">
                    <% productos.forEach(producto=> { %>

                    <% let valorFinal=producto.precio-(producto.precio*producto.descuento)/100 %> 
                    
                        <article>
                            <div class="container-top">
                                <img src=<%="/img/" +producto.img %> alt="producto">
                                <div class="productInfo">
                                    <a href="/product/detail/<%= producto.id %> " class="productName">
                                        <%= producto.titulo %>
                                    </a>
                                    <p class="final-value">
                                        $<%= valorFinal.toFixed(0) %>
                                    </p>
                                    <% if (producto.descuento!=0) { %>
                                        <p class="discount" > 
                                            <%= producto.descuento %> %OFF
                                        </p>
                                        <p class="price">
                                            $<%= producto.precio %>
                                        </p>
                                    <% } else { %>
                                     <br>
                                     <br>
                                        <% } %>

                                    <p class="short-description">
                                        <%= producto.descripcionCorta %>
                                    </p>
                                    <p class="long-description">
                                        <%= producto.descripcionDetallada %>
                                    </p>
                                </div>
                            </div>
                            <div class="edit-button-container">
                                <a href="/product/edit/<%= producto.id %> " class="edit-button">Editar</a>
                            </div>

                            <form action="/product/delete/<%= producto.id %>?_method=DELETE" method="POST" >
                                <button type="submit" class="action-button-delete" onclick="return confirm('EstÃ¡ seguro que desea eliminar <%= producto.titulo %>?');">Eliminar</button>
                            </form>
                        </article>
                        <% }) %>
                </div>
            </section>



        </main>
        </div>
        </section>
        <!-- WHATSAPP -->
        <%- include('./partials/whatsapp'); %>


            </main>
            <!-- FOOTER -->
            <%- include('./partials/footer'); %>
</body>

